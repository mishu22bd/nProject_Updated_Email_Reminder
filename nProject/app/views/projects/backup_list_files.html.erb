
<% if @allFiles.count==0 %>
<br />
<%= "You don't have any files " %>

<% else %>
<table class="list files">
  
  <tr bgcolor="#eaeaea">
    <td><b><%= "File Name" %></b></td>
    <td><b><%= "Uploaded On" %></b></td>
 
  </tr>

<% for a in @allFiles %>
    <tr class="file <%= cycle("odd", "even") %>">
    <td class="filename" ><%= link_to_attachment a %></td>
    <td class="filename" ><%= a.created_on.strftime("%B %d, %Y") %></td>
     </tr>

  <%end %>


</table>

<% end %>




