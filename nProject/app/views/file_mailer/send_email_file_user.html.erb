<%# @box = LinkedFile.where(boxelement_id: @file_id).first %>

<html>
<head>
<style>
body {
  font-family: Verdana, sans-serif;
  font-size: 0.8em;
  
}
h1, h2, h3 { font-family: "Trebuchet MS", Verdana, sans-serif; color: #29333A; }
h1 { font-size: 1.2em; }
h2, h3 { font-size: 1.1em;}
a, a:link, a:visited { color:  rgb(90, 180, 202)}
a:hover, a:active { color: #c61a1a; }
a:link {

	color:rgb(90, 180, 202);
}
a.wiki-anchor { display: none; }
fieldset.attachments {border-width: 1px 0 0 0;}
hr {
  width: 550px;
  height: 1px;
  background: #ccc;
  border: 0;
}
span.footer {
  font-size: 0.8em;
  font-style: italic;
} /** css of the mail body is edited by Eumna**/


</style>
</head>

<body>
	<div id="Layer1" style="position:absolute;text-align:left;left:0px;width:550px;height:50px;z-index:0; background-color: #29333A; opacity: 0.70;"title="">

			<% attachments.inline['logo_iMeet.jpg'] = File.read('public/images/logo_iMeet.jpg') %>






		<%= image_tag attachments['logo_iMeet.jpg'].url %>
 &nbsp; &nbsp;	<%  if Setting.emails_header.present? -%>
	<span class="header" style= "color: #fff;"><%= Redmine::WikiFormatting.to_html(Setting.text_formatting, Setting.emails_header).html_safe %>
	</span>
	
	<% end -%>
	
        
<hr />


	</div>
	

	<div id="Layer3" style="position:absolute;text-align:left;left:0px;top:60px;width:550px;z-index:2; background-color: #F5F5F5; min-height: 220px; border: 1px solid #000;" title=""> 


<b>Dear <%= @user %>, </b></br>
  <p>
    A new file is added.<br>
    File description is # <br>
    <%= @file %> <br>
    You are permitted to view 
    <a href="http://nproject.imeet.biz/boxelements/linked_file/<%= @file_id %>/file/<%= @filename %>" target="_blank"><%= @filename %></a>
  </p>
	

	
	</div>
	<div style= "background-color: #29333A; height:60px; width:550px; margin-left:0px; box-shadow: 0 0 10px rgba(0,0,0, .65);">
		<% if Setting.emails_footer.present? -%>
		<span class="footer" style="color:#fff;">
			<%= Redmine::WikiFormatting.to_html(Setting.text_formatting, Setting.emails_footer).html_safe %></span>
	<% end -%>
	</div>
</body>

</html>



