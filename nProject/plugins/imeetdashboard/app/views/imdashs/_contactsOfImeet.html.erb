<%= stylesheet_link_tag :main %>
<%= javascript_include_tag :u_table %>

<div class="faq-row-container">
      <% count = 0 %>

      <% for project in @pro_sorts %>
        <% if count==0 %>
  
            <div class="faq-row open">
                <a href="javascript:;" class="faq-row-handle"><%= project %><img id="b-arrow"  src="images/arrowd_n.png">  </a>
                  <div class="faq-row-content" style="display:block;">
                      <table class="list files">
                          <tr bgcolor= "#aeaeae">
                            <td><%= "Name" %></td>
                            <td><%= "Contacts" %></td>
                          </tr>


               <% project.users.each do |u| %>
                  <tr class="file <%=cycle('odd','even')%>">
                    <td class="filename"><%= avatar(u, :size => "32", :height => "32", :width => "32")%> <%= link_to u, person_path(u) %></td>
                     <td class="filename"><%= u.phone %></br>
                       <%= mail_to u.mail %> 
                     </td>
                  </tr>
            <% end %>
            </table>

                    </div>

                  <% count = count +1 %>
            </div>

        <% else %>

         <div class="faq-row">
             <a href="javascript:;" class="faq-row-handle"><%= project %> <img id="b-arrow" src="images/arrowd_n.png" ></a>
               <div class="faq-row-content">
                  <table class="list files">
                      <tr bgcolor= "#aeaeae">
                        <td><%= "Name" %></td>
                        <td><%= "Contacts" %></td>
                      </tr>


                <% project.users.each do |u| %>
                  <tr class="file <%=cycle('odd','even')%>">
                              <td class="filename"><%= avatar(u, :size => "32", :height => "32", :width => "32")%> <%= link_to u, person_path(u) %></td>
                              <td class="filename"><%= u.phone %></br>
                              <%= mail_to u.mail %> 
                              </td>
                  </tr>
                <% end %>
                   </table>

               </div>
         </div>
      <% end %>
      <% end %>

</div>