<h1>Listing calls</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Created at</th>
    <th>Started at</th>
    <th>Duration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calls.each do |call| %>
  <tr>
    <td><%= call.name %></td>
    <td><%= call.description %></td>
    <td><%= call.created_at %></td>
    <td><%= call.started_at %></td>
    <td><%= call.duration %></td>
    <td><%= link_to 'Show', call %></td>
    <td><%= link_to 'Edit', edit_call_path(call) %></td>
    <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

