<h1>Project Files</h1>

<table class="list files">
  
  <tr bgcolor="#eaeaea">
    <td class="filename"><b><%= "File Name" %></b></td>
    <td class="filename"><b><%= "Description" %></b></td>
    <td class="filename"><b><%= "Project" %></b></td>
    <td class="filename"><b><%= "Created On" %><b></td>
  </tr>


<% @project_files = @project_files.reverse %>
<% for a in @project_files %>



  <tr class="file <%= cycle("odd", "even") %>">
    <td class="filename" ><%= link_to a.filename, a.file.url  %></td>
        <td class="filename" >
            <% descriptions = Boxelement.where(id: a.boxelement_id).pluck(:name) %>
            <% descriptions.each do |d|%>
              <%= d %>
              <% end %>        
        </td>
        <td class="filename">
            <% projects = Boxelement.where(id: a.boxelement_id).pluck(:project_id) %>  
            <% project_names = Project.where(id: projects).pluck(:name) %>
            <% project_names.each do |p|%>
              <%= p %>
              <% end %>        
       
        </td>
    <td class="filename" ><%= a.created_at.strftime("%B %d, %Y") %></td>
  </tr>

  <%end %>
  


</table>
